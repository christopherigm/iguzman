{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repo/utils": ["../../packages/utils"]
    }
  },
  "lib": ["es2015"],
  "include": ["src", "src/**/*.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
